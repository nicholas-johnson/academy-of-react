{
  "name": "react-course",
  "version": "1.0.0",
  "description": "React Course - From fundamentals to advanced patterns",
  "private": true,
  "scripts": {
    "install:all": "pnpm install",
    "dev:slide-deck": "pnpm --filter slide-deck dev",
    "build:slide-deck": "pnpm --filter slide-deck build",
    "dev:all-slides": "pnpm -r --parallel --filter \"*slides\" dev",
    "dev:all-slides-sequential": "for dir in module-*/slides; do [ -f \"$dir/package.json\" ] && (echo \"Starting $dir...\" && cd \"$dir\" && pnpm dev &); sleep 2; done; wait",
    "dev:all-solutions": "pnpm -r --parallel --filter \"*solution\" dev",
    "dev:all-solutions-sequential": "for dir in module-*/quest-*/solution; do [ -f \"$dir/package.json\" ] && (echo \"Starting $dir...\" && cd \"$dir\" && pnpm dev &); sleep 2; done; wait",
    "slides:1": "pnpm --filter module-01-slides dev",
    "slides:2": "pnpm --filter module-02-slides dev",
    "slides:3": "pnpm --filter module-03-slides dev",
    "slides:4": "pnpm --filter module-04-slides dev",
    "slides:5": "pnpm --filter module-05-slides dev",
    "slides:6": "pnpm --filter module-06-slides dev",
    "slides:7": "pnpm --filter module-07-slides dev",
    "slides:8": "pnpm --filter module-08-slides dev",
    "slides:9": "pnpm --filter module-09-slides dev",
    "slides:10": "pnpm --filter module-10-slides dev",
    "slides:11": "pnpm --filter module-11-slides dev",
    "slides:12": "pnpm --filter module-12-slides dev",
    "slides:13": "pnpm --filter module-13-slides dev",
    "build:all-slides": "pnpm -r --filter \"*slides\" build",
    "dev:demos": "pnpm -r --parallel --filter \"*demo\" dev",
    "clean": "pnpm -r exec rm -rf node_modules dist .turbo && rm -rf node_modules",
    "clean:install": "pnpm clean && pnpm install",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md,css}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,md,css}\""
  },
  "keywords": [
    "react",
    "tutorial",
    "course",
    "education"
  ],
  "author": "Nicholas Johnson",
  "license": "SEE LICENSE IN LICENSE",
  "devDependencies": {
    "prettier": "^3.2.5"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
